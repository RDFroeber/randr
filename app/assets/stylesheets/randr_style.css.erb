/* Header styles for layout */
header {
   position: absolute;
   margin: 0 auto;
   width: 100%;
   height: 200px;
   z-index: 100;
   /*background: url(<%= asset_path 'train_tracks.png' %>) repeat-x;*/
}
header h1.logo {
   position: fixed;
   top: 50px;
   left: 43%;
   padding: 25px 30px 25px 25px;
   background-color: #ffffff;
   font-family: 'Alex Brush', Helvetica, Arial, sans-serif;
   font-size: 40px; 
   text-align: center;
   z-index: 111;
   -moz-border-radius: 50%;
   -webkit-border-radius: 50%;
   border-radius: 50%;
   border: solid 2px #87cdb0;
}
nav {
   position: fixed;
   height: 110px;
   background-color: #303033;
   width: 100%;
   top: 0;
   left: 0;
   right: 0;
   font-family: 'Raleway Dots', Helvetica, Arial, sans-serif;
   border-bottom: solid 20px #74748c;
}
nav ul {
   margin: 35px 20px;
   text-align: center;
}
nav ul li {
   display: inline;
   padding: 30px;
   font-size: 20px;
}
header h1 a {
   text-align: center;
   color: #74748c;
}
nav ul li a:link {
   text-decoration: none;
   color: #ffffff;
}
nav ul li a:visited {
   color: #ffffff;
}
nav ul li a:hover {
   color: #87cdb0;
}
nav ul li a:active {
   color: #87cdb0;
}

/* Body Styles */
body {
   font-family: 'Times New Roman', Times, serif;
   font-size: 16px;
   color: #303033;
}
div#wrapper {
   position: absolute;
   top: 225px;
   margin: 0 auto;
   width: 95%;
   padding: 20px;
}
div.welcome {
   position: relative;
   width: 25%;
   height: 826px;
   padding: 20px;
   -moz-border-radius: 20px;
   -webkit-border-radius: 20px;
   -o-border-radius: 20px;
   border-radius: 20px;
}
.first {
   margin: -50px 40px 0 70px;
   background: url(<%= asset_path 'men_reading.jpg' %>) repeat-x;
   background-position: 0 0;
   float: left;
}
.second {
   margin: -50px 40px 0 40px;
   background: url(<%= asset_path 'men_reading.jpg' %>) repeat-x;
   background-position: 840px 0;
   float: left;
}
.third {
   margin: -50px 40px 0 40px;
   background: url(<%= asset_path 'men_reading.jpg' %>) repeat-x;
   background-position: 440px 0;
   float: left;
}
