/* Links */
a:link {
   text-decoration: none;
   color: #87cdb0;
}
a:visited {
   color: #87cdb0;
}
a:hover {
   color: #74748c;
}
a:active {
   color: #74748c;
}
form a:link {
   text-decoration: none;
   color: #ffffff;
}
form a:visited {
   color: #ffffff;
}
form a:hover {
   color: #74748c;
}
form a:active {
   color: #74748c;
}

form.form_block {
   margin: 0 auto;
   width: 25%;
   background-color: #87cdb0;
   padding: 20px;
   -moz-border-radius: 10px;
   -webkit-border-radius: 10px;
   border-radius: 10px;
}
form input[type=text], form input[type=email],
form input[type=password] {
   display: block;
   margin: 5px 0 10px 0;
   line-height: 18px;
   -moz-border-radius: 2px;
   -webkit-border-radius: 2px;
   border-radius: 2px;
   webkit-box-shadow: inset 1px 1px #999999;
   box-shadow: inset 1px 1px #999999;
}
form input[type=submit] {
   position: relative;
   top: -50px;
   margin: 50px 10px -20px 10px;
   float: right;
   padding: 10px 20px;
   color: #303033;
   background-color: #74748c;
   font-size: 14px;
   -moz-border-radius: 5px;
   -webkit-border-radius: 5px;
   border-radius: 5px;
}
form input[type=submit]:hover {
   color: #ffffff;
   background-color: #303033;
}
div.green_back {
   width: 25%;
   background-color: #87cdb0;
   padding: 20px;
   -moz-border-radius: 10px;
   -webkit-border-radius: 10px;
   border-radius: 10px;
}
div.center {
   margin: 0 auto;
}
div.search {
   margin-left: 20%;
   width: 70%;
}
div.favorites {
   margin-left: 20%;
   float: left;
   width: 30%;
}
div.favorites ul {
   padding: 20px 0 10px 20px; 
}
div.upcoming {
   float: left;
   width: 30%;
}
form input.user_button {
   margin: 10px;
   top: -35px;
   left: 170px;
   float: none;
   padding: 5px 10px;
   color: #303033;
   background-color: #74748c;
   font-size: 12px;
   -moz-border-radius: 5px;
   -webkit-border-radius: 5px;
   border-radius: 5px;
}
form input[value=Add]{
   margin: 10px;
   top: 0;
   left: -10px;
   float: none;
   padding: 5px 10px;
   color: #303033;
   background-color: #74748c;
   font-size: 12px;
   -moz-border-radius: 5px;
   -webkit-border-radius: 5px;
   border-radius: 5px;
}
p.login {
   clear: both;
}
div.green_back ul li {
   list-style-type: circle;
   color: #ffffff;
   margin: 20px 0;
}
span {
   color: #303033;
}
ol {
   padding: 0 0 10px 20px;
}
ol li {
   padding: 10px 0;
}