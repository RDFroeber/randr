<h2><%= @user.name %></h2>
<p><%= @user.email %></p>

   <%= link_to "Edit", edit_user_path(@user) %>
   <%= button_to "Email", user_path(@user), :method => :get, :name => 'email' %>
   
   <h3>My Favorite Authors</h3>
   <ul>
   <% @user.authors.each do |author|  %>
      <li><%= author.name %></li>
      <%= button_to 'Remove', user_favorite_path(@user.id,author.id), method: :delete %>
   <% end %>
   </ul>

   <%= link_to "My Library", library_user_path(@user) %>

   <%= render 'upcoming' %>